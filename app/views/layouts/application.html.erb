<!DOCTYPE html>
<html>
  <head>
    <title>BookFace</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <script type='text/javascript'>
    window.session_top_pic = '<%=  image_path("session_page/sign-in-top-pic.png") %>'
    window.session_mid_pic = '<%=  image_path("session_page/sign-in-mid-pic.png") %>'
    window.session_bot_pic = '<%=  image_path("session_page/sign-in-bottom-pic.png") %>'

    </script>


    <%= yield %>
  </body>
</html>
